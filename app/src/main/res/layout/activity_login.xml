<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/icon_cj"
        android:layout_marginTop="40dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher_foreground"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="21dp"
        android:layout_height="wrap_content"
        android:text="多语言数据采集系统"
        android:textColor="@color/logo_green"/>
</LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_cj"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_card"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_accountmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_phoneno"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/all_black"
            android:textSize="13sp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_accountmessage"
            android:layout_below="@+id/tv_accountmessage"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:textCursorDrawable="@drawable/shape_materia_edittext"
            android:textSize="18sp"
            android:maxLength="11"
            app:met_baseColor="@color/gray_bfbfbf"
            app:met_errorColor="@color/red_ff0000"
            app:met_maxCharacters="11"
            app:met_primaryColor="@color/orange_ff8400"
            app:met_singleLineEllipsis="true"
            app:met_textColor="@color/orange_ff8400"
            app:met_textColorHint="@color/gray_bfbfbf"
            app:met_underlineColor="@color/gray_eeeeee"/>

        <ImageView
            android:id="@+id/iv_clearaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/et_phone"
            android:padding="12dp"
            android:src="@drawable/ic_clear"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_authcodemessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_phone"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_authcode"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="@color/all_black"
            android:textSize="13sp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/et_phone"
            android:layout_below="@id/tv_authcodemessage"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textCursorDrawable="@drawable/shape_materia_edittext"
            android:textSize="18sp"
            android:maxLength="6"
            app:met_baseColor="@color/gray_bfbfbf"
            app:met_primaryColor="@color/orange_ff8400"
            app:met_singleLineEllipsis="true"
            app:met_textColor="@color/orange_ff8400"
            app:met_textColorHint="@color/gray_bfbfbf"
            app:met_underlineColor="@color/gray_eeeeee"/>

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/et_verify_code"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/et_verify_code"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/green_82c307"
            android:textSize="15sp"/>

    </RelativeLayout>

    <com.qmuiteam.qmui.alpha.QMUIAlphaButton
        android:id="@+id/btn_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/rl_login"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_login"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="验证并登陆"
        android:textColor="@color/all_white"
        android:textSize="20sp"
        android:textStyle="bold"/>


</LinearLayout>